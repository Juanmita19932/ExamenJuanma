@model ExamenJuanma.Models.Reserva
<br />
<h2>Editar Producto</h2>

@using (Html.BeginForm("Edit", "Reserva", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.HoraInicio, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.HoraInicio, new { @class = "form-control", required = "required" })
        <div class="invalid-feedback">Por favor ingresa la hora de entrada.</div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.HoraSalida, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.HoraSalida, new { @class = "form-control", required = "required" })
        <div class="invalid-feedback">Por favor ingresa la hora de salida.</div>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Guardar</button>
}